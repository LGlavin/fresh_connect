<div id="list-markets">

       <div class="center">
       <div class="ribbon-blue">fresh connect</div>
 
<h2 class ="title">Nearest Farmer's Markets</h2>


<%= paginate @markets %>

  <% @markets.each do |market| %>
    <ul class="no-bullet">
      
      <strong><li><%= link_to market.name %></li></strong>
       <li><%= market.address%></li>
        <li><%= market.state%></li>
        <li><%= market.postal_code%></li>
      
    </ul>

    <ul class="inline-list">
      <li><%= link_to 'Reviews', market_reviews_path(market) %></li>
   <!--   <li><em>Added by <%= User.where(id: market.user_id).first%></em></li>  -->
      <li><em>Recommended by <%= pluralize(market.recommendations.length, "user") %></em></li>
      <li><%= button_to 'Recommend', market_recommendations_path(market_id: market.id), class:'small secondary', render: :back %></li>
    </ul>
   <hr/>
  <%- end -%>


 <%= paginate @markets %>
 </div>
 </div>
 </div>